@page
@model PdfExtractorRazor.Pages.IndexModel
@{
    ViewData["Title"] = "Calibration Certificate Extractor";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">
                <i class="fas fa-file-pdf text-danger me-2"></i>
                Calibration Certificate Data Extractor
            </h1>
            <p class="lead">Upload PDF calibration certificates to extract structured data in JSON format.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-upload me-2"></i>Upload PDF Files</h5>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="UploadedFiles" class="form-label">Select PDF Files</label>
                            <input asp-for="UploadedFiles" type="file" class="form-control"
                                   accept=".pdf" multiple required>
                            <span asp-validation-for="UploadedFiles" class="text-danger"></span>
                            <div class="form-text">
                                Select one or more PDF calibration certificate files to process.
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-cog me-2"></i>Extract Data
                        </button>
                    </form>
                </div>
            </div>
        </div>

        @if (Model.ExtractionResult != null)
        {
            <div class="col-lg-6">
                <div class="card shadow">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Processing Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <div class="border-end">
                                    <h4 class="text-primary">@Model.ExtractionResult.ProcessedFiles</h4>
                                    <small class="text-muted">Files Processed</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="border-end">
                                    <h4 class="text-success">@Model.ExtractionResult.Certificates.Count</h4>
                                    <small class="text-muted">Certificates Extracted</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <h4 class="text-danger">@Model.ExtractionResult.Errors.Count</h4>
                                <small class="text-muted">Errors</small>
                            </div>
                        </div>

                        @if (Model.ExtractionResult.Errors.Any())
                        {
                            <div class="mt-3">
                                <h6 class="text-danger">Errors:</h6>
                                <ul class="list-unstyled">
                                    @foreach (var error in Model.ExtractionResult.Errors)
                                    {
                                        <li class="text-danger small">
                                            <i class="fas fa-exclamation-triangle me-1"></i>@error
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.ExtractionResult?.HasResults == true)
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-table me-2"></i>Extracted Certificates</h5>
                        <form method="post" asp-page-handler="DownloadJson" class="d-inline">
                            <input type="hidden" name="jsonData" value="@Model.ExtractionResult.JsonOutput" />
                            <button type="submit" class="btn btn-light btn-sm">
                                <i class="fas fa-download me-1"></i>Download JSON
                            </button>
                        </form>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Certificate No</th>
                                        <th>Equipment Type</th>
                                        <th>Manufacturer</th>
                                        <th>Serial No</th>
                                        <th>Range</th>
                                        <th>Location</th>
                                        <th>Status</th>
                                        <th>Cal Date</th>
                                        <th>Next Cal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cert in Model.ExtractionResult.Certificates)
                                    {
                                        <tr>
                                            <td class="fw-bold">@cert.CertificateNo</td>
                                            <td>@cert.EquipmentType</td>
                                            <td>@cert.Manufacturer</td>
                                            <td>@cert.SerialNo</td>
                                            <td>@cert.Range @cert.Units</td>
                                            <td class="small">@cert.Location</td>
                                            <td>
                                                <span class="badge @(cert.Status == "PASS" ? "bg-success" : "bg-danger")">
                                                    @cert.Status
                                                </span>
                                            </td>
                                            <td>@cert.CalibrationDate</td>
                                            <td>@cert.NextCalDate</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-code me-2"></i>JSON Output</h5>
                    </div>
                    <div class="card-body">
                        <pre class="bg-light p-3 rounded" style="max-height: 400px; overflow-y: auto;"><code>@Model.ExtractionResult.JsonOutput</code></pre>
                        <button class="btn btn-outline-secondary btn-sm mt-2" onclick="copyToClipboard()">
                            <i class="fas fa-copy me-1"></i>Copy to Clipboard
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        function copyToClipboard() {
            const jsonText = document.querySelector('pre code').textContent;
            navigator.clipboard.writeText(jsonText).then(function() {
                // Show success message
                const btn = document.querySelector('button[onclick="copyToClipboard()"]');
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
                btn.classList.remove('btn-outline-secondary');
                btn.classList.add('btn-success');

                setTimeout(function() {
                    btn.innerHTML = originalText;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-secondary');
                }, 2000);
            });
        }
    </script>
}